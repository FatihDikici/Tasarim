@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center min-vh-100 align-items-center" style="background: linear-gradient(45deg, rgba(255, 255, 255, 1),rgba(245,235,250,1));">
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 rounded-5 shadow-3xl" style="background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(8px);">
            <div class="card-body p-5">
                <h2 class="text-center mb-4 text-dark fw-bold" style="font-family: 'Roboto', sans-serif;">Kayıt Ol</h2>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>


                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label text-dark fw-semibold">E-Posta</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 text-dark"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="Email" class="form-control form-control-lg shadow-lg rounded-4 border-0 p-3"
                                   placeholder="Adınızı giriniz.."
                                   style="background: linear-gradient(135deg, rgba(245, 161, 206, 0.4), rgba(141, 255, 250, 0.2)); color: #333; font-family: 'Poppins', sans-serif; border-radius: 12px; border: 2px solid transparent; transition: all 0.3s ease-in-out;" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>


                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label text-dark fw-semibold">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 text-dark"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="Password" class="form-control form-control-lg shadow-lg rounded-4 border-0 p-3"
                                   placeholder="Şifrenizi giriniz.." type="password"
                                   style="background:  linear-gradient(135deg, rgba(245, 161, 206, 0.4), rgba(92, 172, 255, 0.2)); color: #333; font-family: 'Poppins', sans-serif; border-radius: 12px; border: 2px solid transparent; transition: all 0.3s ease-in-out;" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="RePassword" class="form-label text-dark fw-semibold">Şifre Yeniden</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0 text-dark"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="RePassword" class="form-control form-control-lg shadow-lg rounded-4 border-0 p-3"
                                   placeholder="Şifrenizi Yeniden giriniz.." type="password"
                                   style="background: linear-gradient(135deg, rgba(245, 161, 206, 0.4), rgba(92, 172, 255, 0.2)); color: #333; font-family: 'Poppins', sans-serif; border-radius: 12px; border: 2px solid transparent; transition: all 0.3s ease-in-out;" />
                        </div>
                        <span asp-validation-for="RePassword" class="text-danger small"></span>
                    </div>


                    <div class="form-group mb-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100 shadow-2xl rounded-5 py-3"
                                style="background: linear-gradient(145deg, #9b57d4, #ff6fb2); font-size: 1.2rem; font-weight: bold; border: none; border-radius: 12px; position: relative; transition: all 0.3s ease-in-out; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);">
                            <i class="fa-solid fa-paper-plane me-2"></i> Kayıt Ol
                        </button>
                    </div>


                    <div class="text-center mt-3">
                        <a href="#" class="text-muted small text-decoration-none hover:text-primary transition-all">Şifrenizi mi unuttunuz?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<style>

    .input-group-text {
        background-color: transparent;
        border: 0;
        color: #333;
        font-size: 1.1rem;
        transition: transform 0.3s ease-in-out;
    }

        .input-group-text:hover {
            transform: scale(1.1);
        }

    .btn:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(106, 137, 255, 0.5), 0 5px 15px rgba(0, 0, 0, 0.3);
        background: linear-gradient(145deg, #ffbb00, #ff512f); /* Transition to gold/orange color */
        text-shadow: 0 0 10px rgba(255, 214, 0, 1), 0 0 20px rgba(255, 214, 0, 0.6);
    }


    .form-control:focus {
        border-color: #9b57d4;
        background: linear-gradient(135deg, rgba(255, 191, 246, 0.3), rgba(141, 255, 250, 0.4));
        box-shadow: 0 0 12px rgba(255, 161, 206, 0.6);
        transition: all 0.4s ease-in-out;
    }


    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f5ff;
        margin: 0;
        padding: 0;
    }

    .form-group input, .form-group button {
        transition: all 0.3s ease-in-out;
    }


    .btn:focus, .btn:hover {
        text-shadow: 0 0 15px rgba(255, 214, 0, 1), 0 0 25px rgba(255, 214, 0, 0.8);
    }


    .card:hover {
        box-shadow: 0 10px 10px #ff6fb2, 0 5px 10px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease-in-out;
    }


    .hover\:text-primary:hover {
        color: #9b57d4 !important;
        text-decoration: underline;
    }


    .shadow-3xl {
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.2);
    }
</style>
